{% extends 'base.html.twig' %}

{% block body %}
    <div>
        {{ page.viewCount }}
    </div>
    <div class="picture-container">
        {% for piece in pieces %}
            <img src="{{ path('image_show', {'slug': piece.slug, 'name': piece.name}) }}"
                 alt="{{ piece.name }}"
                 class="piece"
                 style="top:{{ piece.top }}px;left:{{ piece.left }}px;"
            >
        {% endfor %}
    </div>
{% endblock %}
